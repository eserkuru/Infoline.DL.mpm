@model Infoline.DL.mpm.Models.HomeListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Pivot Demo</title>
    <!-- external libs from cdnjs -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

    <!-- PivotTable.js libs from ../dist -->
    <link rel="stylesheet" type="text/css" href="../dist/pivot.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="../dist/pivot.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <style>
        body {
            font-family: Verdana;
        }
    </style>

    <!-- optional: mobile support with jqueryui-touch-punch -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js"></script>

</head>
<body class="bg-dark">
    <script type="text/javascript">
        // This example loads data from the HTML table below.
        $(function () {

            $("#output").pivotUI($("#input"),
                {
                    rows: ["Öğrenci"],
                    cols: ["Soru"],
                    aggregatorName: "Sum",
                    vals: ["Puan"]
                }
            );
        });
    </script>

    <div class="d-flex justify-content-center m-5">
        <div class="col-10">
            <div class="card">
                <div class="card-header">
                    Madde Puanlama Matrisi
                </div>
                <div class="card-body">
                    <div id="output" style="margin: 30px;"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-none justify-content-center m-5">
        <div class="col-10">
            <div class="card p-3">
                <table id="input" class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Öğrenci</th>
                            <th scope="col">Sınav</th>
                            <th scope="col">Tip</th>
                            <th scope="col">Soru</th>
                            <th scope="col">Cevap</th>
                            <th scope="col">Puan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Mpms)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Ogrenci</td>
                                <td>@item.Sinav</td>
                                <td>@item.Type</td>
                                <td>@item.Soru</td>
                                <td>@item.Cevap</td>
                                <td>@item.Puan</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
